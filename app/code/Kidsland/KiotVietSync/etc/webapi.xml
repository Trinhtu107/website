<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Mage - Get Magento Version -->
    <route url="/V1/demo/getMagentoInfo" method="GET">
        <service class="Demo\CheckoutIntegration\Api\ModuleInterface" method="getMagentoInfo"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- Managing mine Cart Point -->
    <route url="/V1/carts/mine/points" method="GET">
        <service class="Demo\CheckoutIntegration\Api\PointManagementInterface" method="get"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
    <route url="/V1/carts/mine/points/:pointValue" method="PUT">
        <service class="Demo\CheckoutIntegration\Api\PointManagementInterface" method="set"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route url="/V1/carts/mine/points" method="DELETE">
        <service class="Demo\CheckoutIntegration\Api\PointManagementInterface" method="remove"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
