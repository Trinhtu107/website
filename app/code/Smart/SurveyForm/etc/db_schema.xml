<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <!-- Answer table    -->
    <table name="smart_survey_answer" resource="default" engine="innodb" comment="smart_survey_answer">
        <column xsi:type="int" name="id" padding="11" unsigned="true" nullable="false" identity="true" comment="Id"/>
        <column xsi:type="int" name="form_id" default="0" identity="false" comment="Form Id" />
        <column xsi:type="int" name="question_id" default="0" identity="false" comment="Question Id" />
        <column xsi:type="int" name="type_id" default="0" identity="false" comment="Type" />
        <column xsi:type="varchar" name="question" length="255" comment="Question" />
        <column xsi:type="varchar" name="answer" length="255" comment="Answer" />
        <column xsi:type="varchar" name="customer" length="255" comment="Customer" />
        <column xsi:type="int" name="th_point"  comment="TH Point" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>

    <!-- Question table    -->
    <table name="smart_survey_question" resource="default" engine="innodb" comment="smart_survey_question">
        <column xsi:type="int" name="id" padding="11" unsigned="true" nullable="false" identity="true" comment="Question Id"/>
        <column xsi:type="int" name="form_id" default="0" identity="false" comment="Form Id" />
        <column xsi:type="varchar" name="question" length="255" comment="Question" />
        <column xsi:type="int" name="active" default="1" identity="false" comment="Enable/Disable Question" />
        <column xsi:type="int" name="type_id" default="0" identity="false" comment="Answer Type" />
        <column xsi:type="varchar" name="answer" length="255" comment="Answer" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>

    <!-- List Form    -->
    <table name="smart_survey_form_list" resource="default" engine="innodb" comment="smart_survey_answer">
        <column xsi:type="int" name="id" padding="11" unsigned="true" nullable="false" identity="true" comment="Form Id"/>
        <column xsi:type="int" name="active" default="1" identity="false" comment="Enable/Disable Question" />
        <column xsi:type="varchar" name="question_list" length="255" comment="List Question" />
        <column xsi:type="varchar" name="title" length="255" comment="Title" />
        <column xsi:type="varchar" name="description" length="255" comment="Description" />
        <column xsi:type="varchar" name="thumbnail_image" length="255" comment="Thumbnail" />
        <column xsi:type="date" name="start_date" comment="First Date of Question" />
        <column xsi:type="date" name="end_date" comment="Last Date of Question" />
        <column xsi:type="int" name="th_point" default="0" comment="TH Point" />
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>

</schema>
