<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="smart_promotions_table" resource="default" comment="Promotions Table">
        <column xsi:type="int" name="id" padding="11" unsigned="true" nullable="false" identity="true" comment="Id"/>
        <column xsi:type="int" name="active" default="1" identity="false" comment="Enable/Disable" />
        <column xsi:type="int" name="budget" comment="Budget"/>
        <column xsi:type="varchar" name="image" length="255" comment="Image" />
        <column xsi:type="varchar" name="image_detail" length="255" comment="Image in detail page" />
        <column xsi:type="varchar" name="title" length="255" comment="Title" />
        <column xsi:type="text" name="content" nullable="true" comment="Content" />
        <column xsi:type="date" name="start_date" comment="Start" />
        <column xsi:type="date" name="end_date" comment="End" />
        <column xsi:type="varchar" name="customer_id" length="255" comment="Customer Id" />
        <column xsi:type="varchar" name="customer_group_ids" length="255" comment="Customer Group Id" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>

    <table name="salesrule" resource="default" comment="Promotions Table">
        <column xsi:type="int" name="promotion_id" comment="Parent code /Promotion Id"/>
        <column xsi:type="int" name="th_point" comment="TH Point"/>
    </table>

</schema>
