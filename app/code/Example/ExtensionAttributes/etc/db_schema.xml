<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="product_extension_attributes" resource="default" engine="innodb" comment="Test Demo Extension">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" />
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" comment="Product ID" identity="false"/>
        <column xsi:type="varchar" name="date_start" nullable="true" length="50" comment="extension 1"/>
        <column xsi:type="varchar" name="date_end" nullable="true" length="50" comment="extension 2"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="CAT_PRD_GR_PRD_ID_CAT_PRD_ENTT_ENTT_ID" table="product_extension_attributes"
                    column="product_id" referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>
